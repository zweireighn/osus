@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
</head>

<div class="section-padding" style="background-color: #ffffff;">
    <div class="container">

        <div class="col-sm-12 section-padding">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Continue shopping</a></li>
                </ol>
            </nav>
        </div>

        <div class="row justify-content-md-center">
            <div class="col-sm-auto">
                <h1><b>Checkout</b></h1>
            </div>
        </div>

        <div class="row">
            @*Main Info*@
            <div class="col-sm-6" style="background-color: whitesmoke;">
                <div class="container">
                    <form>
                        <div class="col-sm-12 section-padding-small">
                            <div class="mb-4">
                                <p class="fs-3 fw-bold">Contact Information</p>
                            </div>
                            <div class="mb-3">
                                <input type="email" class="form-control form-custom" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email">
                            </div>
                            <div class="mb-3">
                                <input type="password" class="form-control form-custom" id="exampleInputPassword1" placeholder="Mobile Number">
                            </div>
                        </div>


                        <div class="col-sm-12 section-padding-small">
                            <div class="mb-4">
                                <p class="fs-3 fw-bold">Delivery Information</p>
                            </div>
                            <div class="row">
                                <div class="mb-3 col-sm-6">
                                    <input type="text" class="form-control form-custom" id="" placeholder="First Name" />
                                </div>
                                <div class="mb-3 col-sm-6">
                                    <input type="text" class="form-control form-custom" id="" placeholder="Last Name" />
                                </div>
                            </div>
                            <div class="" row">
                                <div class="mb-3 col-sm-12">
                                    <input type="text" class="form-control form-custom" id="" placeholder="Region" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="mb-3 col-sm-6">
                                    <input type="text" class="form-control form-custom" id="" placeholder="Postal Code" />
                                </div>
                                <div class="mb-3 col-sm-6">
                                    <input type="text" class="form-control form-custom" id="" placeholder="City" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="mb-3 col-sm-12">
                                    <input type="text" class="form-control form-custom" id="" placeholder="Address" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="mb-3 col-sm-12">
                                    <input type="text" class="form-control form-custom" id="" placeholder="Apartment, suit (optional)" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="mb-3 col-sm-12">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" checked>
                                        <label class="form-check-label" for="flexCheckDefault">
                                            Save this information
                                        </label>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="mb-3 row">
                            <div class="col-sm-3">
                                <label for="exampleFormControlInput1" class="form-label" style="font-weight: bold;">Shipping Method:</label>
                            </div>
                            <div class="col-sm-9" style="">
                                <div class="container">
                                    <div class="col-md-2 px-3 float-end">
                                        <img src="~/Content/image/JT-Express-Logo.png" class="img-fluid">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mb-4">
                            <p class="fs-3 fw-bold">Payment</p>
                        </div>
                        <div class="mb-3">
                            <div class="alert alert-warning">
                                <div class="mb-3">
                                    <p class="fs-3 fw-bold">Cash On Delivery (COD)</p>
                                </div>
                                <div class="mb-3">
                                    <p class="fs-4">• Your Order will be delivered withint 2-5 days after confirmation</p>
                                </div>
                                <div class="mb-3">
                                    <p class="fs-4">• Please pay exact amount of your order</p>
                                </div>
                                <div class="mb-3">
                                    <p class="fs-4">• Strictly No cancellation once orders are processed</p>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            @*Items*@
            <div class="col-sm-6">
                <div class="container">
                    <div class="mb-5">
                        <table class="table table-responsive-sm" @*style="margin: auto;"*@>
                            <thead>
                                <tr>
                                    <th scope="col">Product</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col"><label class="float-end">Total</label></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <div class="row">
                                            <div class="col-6 col-sm-3"><img src="~/Content/image/samp-prod2.png" style="max-width:min-content;" /></div>
                                            <div class="col-6 col-sm-3">
                                                <label class="form-label" style="font-weight: bold;">Red Dragon Cartridge 1 Box (20 pcs)</label>
                                                <label class="origPrice form-label" style="text-decoration: line-through;">₱ 279.00</label>
                                                <label class="form-label dcPrice" style="color: #ED1C24;">₱ 279.00</label>
                                            </div>
                                        </div>
                                    </td>
                                    <td style="align-content: center;">
                                        <label>1</label>

                                    </td>
                                    <td style="align-content: center;">
                                        <p class="tablePrice float-end fs-4">₱ 279.00</p>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="row">
                                            <div class="col-6 col-sm-3"><img src="~/Content/image/samp-prod2.png" style="max-width:min-content;" /></div>
                                            <div class="col-6 col-sm-3">
                                                <label class="form-label" style="font-weight: bold;">Red Dragon Cartridge 1 Box (20 pcs)</label>
                                                <label class="origPrice form-label" style="text-decoration: line-through;">₱ 279.00</label>
                                                <label class="form-label dcPrice" style="color: #ED1C24;">₱ 279.00</label>
                                            </div>
                                        </div>
                                    </td>
                                    <td style="align-content: center;">
                                        <label>1</label>
                                    </td>
                                    <td style="align-content: center;">
                                        <p class="tablePrice float-end fs-4">₱ 279.00</p>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="row">
                                            <div class="col-6 col-sm-3"><img src="~/Content/image/samp-prod2.png" style="max-width:min-content;" /></div>
                                            <div class="col-6 col-sm-3">
                                                <label class="form-label" style="font-weight: bold;">Red Dragon Cartridge 1 Box (20 pcs)</label>
                                                <label class="origPrice form-label" style="text-decoration: line-through;">₱ 279.00</label>
                                                <label class="form-label dcPrice" style="color: #ED1C24;">₱ 279.00</label>
                                            </div>
                                        </div>
                                    </td>
                                    <td style="align-content: center;">
                                        <label>1</label>
                                    </td>
                                    <td style="align-content: center;">
                                        <p class="tablePrice float-end fs-4">₱ 279.00</p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="row">
                        <div class="mb-3">
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="fs-4">Shipping Fee:</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="fs-4 float-end">₱ 279.00</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="mb-3">
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="fs-4">Voucher:</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="fs-4 float-end">₱ 0.00</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="mb-1">
                                <hr style="border-color: dimgray;" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-3">
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="fs-2 fw-bold">Total:</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="fs-2 fw-bold float-end">₱ 0.00</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-3">
                            <div class="row">
                                <div class="d-grid gap-2">
                                    <button class="btn btn-dark btn-outline-osus" type="button">Place Order</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script type="text/javascript">
    $(".mainBanner").css("display", "none");
</script>

