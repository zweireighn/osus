@model OsusTattoo.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginLayoutPage.cshtml";
}

<div class="section-padding bg-white center">
    <div class="row">
        <div class="col-md-6 center">
            <main aria-labelledby="title">
                <center><h1 id="title">@ViewBag.Title</h1></center>

                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="row spacing">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.Firstname, new { @class = "col-form-label" })
                            @Html.TextBoxFor(m => m.Firstname, new { @class = "form-control input-field" })
                        </div>
                    </div>

                    <div class="row spacing">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.Lastname, new { @class = "col-form-label" })
                            @Html.TextBoxFor(m => m.Lastname, new { @class = "form-control input-field" })
                        </div>
                    </div>
                    <div class="row spacing">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.Email, new { @class = "col-form-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-field" })
                        </div>
                    </div>
                    <div class="row spacing">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.Password, new { @class = "col-form-label" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-field" })
                        </div>
                    </div>
                    <div class="row spacing">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-form-label" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-field" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <a href="@Url.Action("Login", "Account")">
                                <input type="button" value="Back" class="btn btn-outline-osus" />
                            </a>
                            <input type="submit" value="Register" class="btn btn-primary-osus" />
                        </div>
                    </div>
                }
            </main>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
