@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model OsusTattoo.Models.ProductDetailsModel

<head>
    <style>
        .carousel-indicators button.thumbnail {
            width: 100px;
            height: auto;
        }

            .carousel-indicators button.thumbnail:not(.active) {
                opacity: 0.7;
            }

            .carousel-indicators button.thumbnail.active {
                border: thin;
                border-style: solid;
                border-color: #ED1C24;
            }

        .carousel-indicators {
            position: static;
        }

        @@media screen and (min-width: 992px) {
            .carousel {
                max-width: 100%;
                margin: 0 auto;
            }
        }
    </style>
</head>

<div style="background-color: #ffffff;">
    <div class="container">
        <div class="col-sm-12 section-padding">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">All Products</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Red Dragon Cartridge</li>
                </ol>
            </nav>

        </div>

        <div class="row" style="width: 100%; margin: auto;">
            @*Product Details*@
            <div class="col-sm-6">
                <!-- Carousel wrapper (Limit Img Thumbnail to 5)-->
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @{ int ctr = 0; }
                        @foreach (string img in Model.ListOfImages)
                        {
                            <div class="carousel-item @(ctr <= 0 ? "active" : "")">
                                <img src="@Href("~/" + Model.ImagePath + "/" + img)" class="d-block w-100" alt="...">
                            </div>

                            ctr++;
                        }
                    </div>
                    <div class="carousel-indicators">
                        @{ int ctr1 = 0; }

                        @foreach (string img in Model.ListOfImages)
                        {
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@ctr1" class="active thumbnail" @(ctr1 <= 0 ? "aria-current=\"true\"" : "") aria-label="Slide 1">
                                <img src="@Href("~/" + Model.ImagePath + "/" + img)" class="d-block w-100" alt="...">
                            </button>
                            ctr1++;
                        }
                    </div>
                </div>

                <br>
                <!-- Carousel wrapper -->
            </div>
            @*End Product Details*@

            @*Product Variations*@
            <div class="col-sm-6">
                <div class="row">
                    <div class="col">
                        <div class="mb-1">
                            <h1 class="form-label" style="font-weight: bold;">Red Dragon Cartridge 1 Box (20 pcs)</h1>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="mb-1">
                            <label class="origPrice form-label label-origproductprice" font-size: x-large;">₱ 330.00</label>
                            <label class="form-label dcPrice" style="color: #ED1C24; font-size: x-large;">₱ 279.00</label>
                        </div>
                    </div>
                </div>

                @*HR*@
                <div class="row">
                    <div class="col">
                        <div class="mb-1">
                            <hr style="border-color: dimgray;" />
                        </div>
                    </div>
                </div>
                @*End HR*@

                <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 row-cols-xl-5">
                    @foreach (string img in Model.ListOfImages)
                    {
                        <div class="col">
                            <div class="mb-3 variation">
                                <label>1201RL 1BOX</label>
                            </div>
                        </div>
                    }
                </div>

                <br />
                <br />
                <div class="row">
                    <div class="col">
                        <div class="mb-1">
                            <div class="d-grid gap-2 spacing">
                                <button class="btn btn-outline-dark btn-outline-osus" type="button">Add to Cart</button>
                            </div>
                            <div class="d-grid gap-2 spacing">
                                <button class="btn btn-dark btn-outline-osus" type="button">Buy Now</button>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
            @*End Product Variations*@
        </div>
    </div>

